<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_settings"
        android:id="@+id/settingsText"
        android:textSize="30sp"
        android:textAlignment="center"
        android:padding="@dimen/fab_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/volume_text"
        android:id="@+id/text_volume"
        android:textSize="20sp"
        android:layout_below="@+id/settingsText"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/fab_margin" />
    <SeekBar
        android:id="@+id/volume_slider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_volume"
        android:layout_toEndOf="@+id/text_button_size"
        android:layout_toRightOf="@+id/text_button_size"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/fab_margin"
        android:progress="100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/size_text"
        android:id="@+id/text_button_size"
        android:textSize="20sp"
        android:layout_below="@+id/text_volume"
        android:paddingTop="5dp"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingBottom="@dimen/fab_margin"/>
    <SeekBar
        android:id="@+id/size_slider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_button_size"
        android:layout_toEndOf="@+id/text_button_size"
        android:layout_toRightOf="@+id/text_button_size"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/fab_margin"
        android:progress="3"
        android:max="4"/>

</RelativeLayout>